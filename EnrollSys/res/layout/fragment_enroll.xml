<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/framelayout_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.oz.main">

    <LinearLayout
        style="@style/framelayout_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" >

            <TextView
                android:id="@+id/txt_title"
                style="@style/title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/power_title" />
        </LinearLayout>

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/foregroud_color"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="48dp" >

            <com.oz.custom.CircleImageView
                app:border_width="2dp"
                app:border_color="#FFFFFFFF"
                android:id="@+id/fragment_enroll_img_head"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/test"/>

            <TextView
                android:id="@+id/fragment_enroll_txt_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/head_name"
                android:textColor="@color/head_name_text_color"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/fragment_enroll_menu_layout" />
    </LinearLayout>

</LinearLayout>
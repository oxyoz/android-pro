<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/navigation_drawer_fragment_bgcolor"
    xmlns:app="http://schemas.android.com/apk/res/com.main.v">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical" >

        <com.main.v.CircleImageView
            android:id="@+id/drawer_img_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:border_width="2dp"
            app:border_color="#FFFFFF"
            android:src="@drawable/test" />
        
        <TextView 
            android:id="@+id/drawer_txt_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="DongMan"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ExpandableListView
            android:id="@+id/menuLit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"          
            android:divider="#00000000"
            android:cacheColorHint="#00000000"
            android:listSelector="@color/expandable_child_item_bgColor"
            android:choiceMode="singleChoice"
            android:transcriptMode="normal"
            android:dividerHeight="0dp" >
        </ExpandableListView>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 形状的角度 -->
    <corners
        android:radius="10dp"
        />
    <!-- 渐变颜色 -->
    <gradient
        android:startColor="#000000"
        android:endColor="#000000"
        android:angle="45"
        />
    <!-- 实心 -->
    <solid android:color="#000000"/>
    
    <!--边界和内容的间距 -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"
        />
    
    <!-- 描边 -->
    <stroke
        android:width="1dp"
        android:color="@color/strokeColor"
        />

</shape>

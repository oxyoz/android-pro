<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_body"
    android:orientation="vertical"
    tools:context="com.main.v.LoginActivity" 
    xmlns:app="http://schemas.android.com/apk/res/com.main.v">
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical" >

        <com.main.v.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/test"
            app:border_color="@color/loginHeadBorderColor"
            app:border_width="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="vertical" >
            <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
 			>
 			 <requestFocus />
 			</EditText>
            <EditText
                android:id="@+id/edt_userName"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:paddingLeft="15dp"               
                android:background="@drawable/edt_selector"
                android:text="admin" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="vertical" >

        

            <EditText
                android:id="@+id/edt_userPassword"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:paddingLeft="15dp"
                android:background="@drawable/edt_selector"
                android:inputType="textPassword"
                android:text="888888"
               >
              
            </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="进入系统"
            android:textColor="#ffffff"
            android:textSize="20sp"       
            android:background="@drawable/btn_selector" />
    </LinearLayout>
   

</LinearLayout>